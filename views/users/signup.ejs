<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h2>SignUp for Rental-Management</h2>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter username" id="username" class="form-control"
                        required />
                    <div class="invalid-feedback">
                        Username should not be blank.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" placeholder="Enter your email" id="email" class="form-control"
                        required />
                    <div class="invalid-feedback">
                        Email should not be blank.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Create a strong password" id="password"
                        class="form-control" required />
                    <div class="invalid-feedback">
                        Password should not be blank.
                    </div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>